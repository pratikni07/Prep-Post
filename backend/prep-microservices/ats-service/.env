# MongoDB connection string
MONGODB_URI=mongodb://username:password@host:port/database

# Server port (optional, defaults to 5000 if not set)
PORT=5000

# LinkedIn API credentials (for future implementation with official API)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# JWT secret for user authentication (if you implement user accounts)
JWT_SECRET=your_jwt_secret_key

# API rate limiting (requests per minute)
RATE_LIMIT=100

# Enable/disable debug mode
DEBUG=true

# Node environment (development, production, test)
NODE_ENV=development

# CORS allowed origins (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# PDF parsing timeout (in milliseconds)
PDF_PARSE_TIMEOUT=30000

# Maximum file size for resume uploads (in bytes)
MAX_FILE_SIZE=5242880  # 5MB